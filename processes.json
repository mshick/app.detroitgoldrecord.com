{
    "apps": [{
        "name": "web",
        "script": "./web.js",
        "instances": 1,
        "log_date_format": "YYYY-MM-DD",
        "error_file": "/var/opt/log/walkthewalk-api/web-err.log",
        "out_file": "/var/opt/log/walkthewalk-api/web-out.log",
        "pid_file": "/var/opt/walkthewalk-api/pids/web.pid",
        "exec_mode": "cluster_mode",
        "merge_logs": true,
        "env": {
            "NODE_ENV": "production",
            "ON_ERROR": "exit"
        }
    }, {
        "name": "harvest",
        "script": "./harvest.js",
        "instances": 1,
        "log_date_format": "YYYY-MM-DD",
        "error_file": "/var/opt/log/walkthewalk-api/harvest-err.log",
        "out_file": "/var/opt/log/walkthewalk-api/harvest-out.log",
        "pid_file": "/var/opt/walkthewalk-api/pids/harvest.pid",
        "exec_mode": "fork_mode",
        "env": {
            "NODE_ENV": "production"
        }
    }]
}
