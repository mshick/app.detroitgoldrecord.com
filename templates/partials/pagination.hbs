<div class="text-center">
  <ul class="pagination">
    {{#paginate list type="previous"}}
      <li {{#if disabled}}class="disabled"{{/if}}><a href="?page={{n}}" >&laquo;</a></li>
    {{/paginate}}
    {{#paginate list type="middle" limit="7"}}
      <li {{#if active}}class="active"{{/if}}><a href="?page={{n}}">{{n}}</a></li>
    {{/paginate}}
    {{#paginate list type="next"}}
      <li {{#if disabled}}class="disabled"{{/if}}><a href="?page={{n}}">&raquo;</a></li>
    {{/paginate}}
  </ul>
</div>
